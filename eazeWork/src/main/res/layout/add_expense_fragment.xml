<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/header_layout"
        layout="@layout/custom_header_layout"
        android:visibility="visible"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardViewExpense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_7"
                                android:layout_weight="0.3"
                                android:padding="5dp"
                                android:text="Category"
                                android:textColor="@color/black" />

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_weight="0.7">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_45"
                                    android:layout_gravity="center"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:src="@drawable/choicelist" />

                                <TextView
                                    android:id="@+id/categoryTypeTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/transparent"
                                    android:paddingBottom="18dp"
                                    android:paddingEnd="@dimen/margin_20"
                                    android:paddingStart="@dimen/margin_20"
                                    android:paddingTop="@dimen/margin_10"
                                    android:text="Select Category"
                                    android:textColor="@color/black" />
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_select_date_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/fromDateLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_default"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_from_date_top"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/padding_default"
                                    android:paddingTop="@dimen/padding_default"
                                    android:text="From Date"
                                    android:textColor="@color/black" />

                                <LinearLayout
                                    android:id="@+id/ll_from_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_corne_background_blue_dark"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/padding_mini"
                                    android:paddingRight="@dimen/padding_default">

                                    <ImageView
                                        android:id="@+id/imageView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:padding="2dp"
                                        android:src="@drawable/icon_callender" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/padding_default"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_from_day"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="From Date"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/margin_13" />

                                        <TextView
                                            android:id="@+id/tv_from_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="--/--/----"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/margin_13" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:background="@android:color/transparent" />

                            <LinearLayout
                                android:id="@+id/todateLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_default"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_to_date_top"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/padding_default"
                                    android:paddingTop="@dimen/padding_default"
                                    android:text="To Date"
                                    android:textColor="@color/black" />

                                <LinearLayout
                                    android:id="@+id/ll_to_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_corne_background_blue_dark"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/padding_mini"
                                    android:paddingRight="@dimen/padding_default">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:padding="2dp"
                                        android:src="@drawable/icon_callender" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/padding_default"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_to_day"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:singleLine="true"
                                            android:text="To Date"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/margin_13" />

                                        <TextView
                                            android:id="@+id/tv_to_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="--/--/----"
                                            android:textSize="@dimen/margin_13"
                                            android:textColor="@color/white" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_default"
                                android:text="Details"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/detailsET"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_margin="@dimen/margin_10"
                                android:background="@drawable/focus_style_gray"
                                android:ems="10"
                                android:padding="@dimen/margin_default"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/claimHeadLinearLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_marginTop="@dimen/margin_7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:padding="5dp"
                                android:text="Claim Head"
                                android:textColor="@color/black"
                                />

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_weight="0.7">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:src="@drawable/choicelist" />

                                <TextView
                                    android:id="@+id/categoryHeadTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/transparent"
                                    android:paddingBottom="18dp"
                                    android:paddingEnd="@dimen/margin_20"
                                    android:paddingStart="@dimen/margin_20"
                                    android:paddingTop="@dimen/margin_10"
                                    android:text="Select Claim Head"
                                    android:textColor="@color/black" />
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/distanceLinearLayout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="Distance (Kms)"
                                    android:textColor="@color/black" />

                                <LinearLayout
                                    android:id="@+id/input_layout_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7">

                                    <EditText
                                        style="@style/edittext"
                                        android:id="@+id/distanceET"
                                        android:layout_width="fill_parent"
                                        android:layout_height="@dimen/margin_40"
                                        android:text="dhgsjh"
                                        android:paddingBottom="@dimen/margin_5"
                                        android:inputType="number"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/inputDaysLinearLayout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="Input (Days)"
                                    android:textColor="@color/black"
                                    />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7">

                                    <EditText
                                        style="@style/edittext"
                                        android:id="@+id/daysET"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="0.7"
                                        android:hint="Distance"
                                        android:inputType="number"
                                        android:paddingStart="@dimen/margin_20"
                                        android:paddingBottom="@dimen/margin_5"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dynamicLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/calendarLinearLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/periodTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_10"
                                        android:text="txt"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_14" />

                                    <LinearLayout
                                        android:id="@+id/periodLinearLayout"
                                        android:layout_width="145dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/rounded_corne_background_blue_dark"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/padding_mini"
                                        android:paddingRight="@dimen/padding_default">

                                        <ImageView
                                            android:id="@+id/imageView3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:padding="2dp"
                                            android:src="@drawable/icon_callender" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginRight="@dimen/padding_default"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tv_from_Month"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="month"
                                                android:textSize="@dimen/margin_13"
                                                android:textColor="@color/white" />

                                            <TextView
                                                android:id="@+id/tv_from_Year"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="year"
                                                android:textSize="@dimen/margin_13"
                                                android:textColor="@color/white" />


                                        </LinearLayout>
                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:id="@+id/inputLinearLayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:orientation="vertical"
                                        android:padding="10dp"
                                        android:visibility="gone"
                                        android:weightSum="1">


                                        <TextView
                                            android:id="@+id/inputTV"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:text="LabelInput"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/font_14" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="1">

                                            <EditText
                                                style="@style/edittext"
                                                android:id="@+id/inputET"
                                                android:layout_width="0dp"
                                                android:layout_height="@dimen/margin_40"
                                                android:layout_weight="0.7"
                                                android:inputType="number"
                                                android:maxLength="5"
                                                android:paddingBottom="@dimen/margin_5"

                                                 />

                                            <TextView
                                                android:id="@+id/inputRightTV"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.4"
                                                android:text="LabelKM" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:id="@+id/amountLinearLayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:orientation="vertical"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:visibility="gone"
                                        android:weightSum="1">
                                        <TextView
                                            android:id="@+id/amountTV"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:text="LabelAmount"
                                            android:textColor="@color/black"/>

                                        <EditText
                                            style="@style/edittext"
                                            android:id="@+id/amountET"
                                            android:paddingBottom="@dimen/margin_5"
                                            android:layout_width="fill_parent"
                                            android:layout_height="@dimen/margin_40"
                                            android:inputType="number" />

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5">
                    <include layout="@layout/upload_document_layout"></include>
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/flCapture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/saveLl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/rejectBTN"
                        style="@style/button"
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_30"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_corner_accent"
                        android:text="Reject"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/saveBTN"
                        style="@style/button"
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_30"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rounded_corner_light_blue"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>