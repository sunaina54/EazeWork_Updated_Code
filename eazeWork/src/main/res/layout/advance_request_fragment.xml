<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/add_expense"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_13"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardViewExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:padding="5dp"
                                    android:text="Reason"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_14" />


                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_weight="0.7">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:paddingEnd="@dimen/margin_10"
                                        android:paddingStart="@dimen/margin_10"
                                        android:src="@drawable/choicelist" />

                                    <TextView
                                        android:id="@+id/reasonTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/transparent"
                                        android:paddingBottom="18dp"
                                        android:paddingEnd="@dimen/margin_20"
                                        android:paddingStart="@dimen/margin_20"
                                        android:paddingTop="@dimen/margin_10"
                                        android:text="Select Reason"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_14" />
                                </FrameLayout>

                                <Spinner
                                    android:id="@+id/reasonSpinner"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:overScrollMode="never"
                                    android:scrollbars="none"
                                    android:spinnerMode="dropdown"
                                    android:visibility="gone"></Spinner>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:padding="5dp"
                                    android:text="Currency"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_14" />

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="45dp"
                                    android:layout_weight="0.7">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:paddingEnd="@dimen/margin_10"
                                        android:paddingStart="@dimen/margin_10"
                                        android:src="@drawable/choicelist" />

                                    <TextView
                                        android:id="@+id/currencyTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/transparent"
                                        android:paddingBottom="18dp"
                                        android:paddingEnd="@dimen/margin_20"
                                        android:paddingStart="@dimen/margin_20"
                                        android:paddingTop="@dimen/margin_10"
                                        android:text="Select Currency"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_14" />
                                </FrameLayout>

                                <LinearLayout
                                    style="@style/blueBorderEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="35dp"
                                    android:layout_weight="0.7"
                                    android:visibility="gone">

                                    <Spinner
                                        android:id="@+id/currencySpinner"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:overScrollMode="never"
                                        android:scrollbars="none"
                                        android:spinnerMode="dropdown"
                                        android:visibility="gone"

                                        ></Spinner>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="0.3"
                                    android:padding="5dp"
                                    android:text="Amount"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_14" />

                                <EditText
                                    android:id="@+id/amountET"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:inputType="number"
                                    android:maxLength="5"
                                    android:paddingStart="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_14" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:padding="5dp"
                                    android:text="Remarks"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <EditText
                                    android:id="@+id/remarksET"
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/focus_style_gray"
                                    android:ems="10"
                                    android:maxLength="50"
                                    android:padding="@dimen/margin_default"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_14" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include layout="@layout/upload_document_layout"></include>
                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
