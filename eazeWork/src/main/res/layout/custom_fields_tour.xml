    </LinearLayout>
    <LinearLayout
        android:id="@+id/photographyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_7"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/photographyLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/photographyTV"
                style="@style/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_default"
                android:paddingTop="@dimen/padding_default"
                android:text="@string/photography" />

            <LinearLayout
                android:id="@+id/ll_photography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corne_background_blue_dark"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_mini"
                android:paddingRight="@dimen/padding_default">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:src="@drawable/icon_callender" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/padding_default"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_photography_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/white"
                        android:textSize="@dimen/margin_13" />

                    <TextView
                        android:id="@+id/tv_photography_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/--/----"
                        android:textColor="@color/white"
                        android:textSize="@dimen/margin_13" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
