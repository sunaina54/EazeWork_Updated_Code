<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_bg"
        >
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/add_expense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="visible">

           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_13"
                android:orientation="vertical">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardViewExpense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_5"
                        android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.31"
                        android:padding="5dp"
                        android:text="Voucher No"
                       style="@style/textView"
                        android:textSize="@dimen/font_14" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default"
                        android:text=":"
                        android:textColor="@color/black" />


                        <TextView
                            android:id="@+id/voucherNoTV"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            style="@style/textViewYellow"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"


                            android:textSize="@dimen/font_14" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.31"
                        android:padding="5dp"
                        android:text="Reason"
                        style="@style/textView"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default"
                        android:text=":"
                        android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/reasonTV"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            style="@style/textViewYellow"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"


                            android:textSize="@dimen/font_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.31"
                        android:padding="5dp"
                        android:text="Currency"
                        style="@style/textView"
                        android:textSize="@dimen/font_14" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default"
                        android:text=":"
                        android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/currencyTV"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            style="@style/textViewYellow"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="@dimen/font_14" />


                    <LinearLayout
                        style="@style/blueBorderEditText"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.7"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/currencySpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:spinnerMode="dropdown"
                            android:visibility="gone"

                            ></Spinner>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="7dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.3"
                        android:padding="5dp"
                        android:text="Amount"
                        style="@style/textView"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_default"
                        android:text=":"
                        android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/amountET"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:paddingBottom="@dimen/margin_15"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="@dimen/font_14"
                           />

                </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/remarksAdvanceLl">
                        <LinearLayout
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/font_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remarks"
                                style="@style/textView" />
                        </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:visibility="visible">



                    <EditText
                        android:id="@+id/remarksET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_70"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/focus_style_gray"
                        android:ems="10"
                        android:hint="@string/remarksLimit"
                        android:maxLength="250"
                        android:padding="@dimen/margin_default"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14" />

                </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
             
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/remarks_layout"></include>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/upload_document_layout"></include>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rejectBTN"
                        style="@style/button"
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_30"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@drawable/rounded_corner_accent"
                        android:text="Reject"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                    <Button
                        android:id="@+id/approvalBTN"
                        android:layout_width="@dimen/margin_70"
                        android:layout_height="@dimen/margin_30"
                        style="@style/button"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@drawable/rounded_corner_light_blue"
                        android:text="Approve"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_12" />

                </RelativeLayout>
            </LinearLayout>

        </FrameLayout>
    </ScrollView>
</RelativeLayout>
</RelativeLayout>