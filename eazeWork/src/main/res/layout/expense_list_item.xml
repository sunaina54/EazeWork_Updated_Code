<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_mini"
    android:paddingRight="@dimen/padding_mini"
    android:paddingBottom="@dimen/margin_5"
    android:paddingTop="@dimen/margin_5" >

    <RelativeLayout
        android:id="@+id/documentParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:layout_gravity="center_vertical"
                android:src="@drawable/jpeg_icon" />

            <hr.eazework.com.ui.util.custom.RoundedImageView
        android:id="@+id/img_icon_rounded"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_left_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_default" >

        <TextView
            android:id="@+id/fileNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="File name"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" />
        <TextView
            android:visibility="visible"
            android:id="@+id/fileDescriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="File name"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" />

    </LinearLayout>


    <ImageView
        android:id="@+id/img_menu_icon"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/squares_line" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gradient_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
