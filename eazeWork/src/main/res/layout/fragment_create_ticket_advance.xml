                        <LinearLayout
                            android:id="@+id/empCodeLinearLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <TextView
                                style="@style/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:padding="@dimen/margin_7"
                                android:text="@string/employee_code" />


                            <TextView
                                android:id="@+id/empCodeTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.6"
                                android:paddingBottom="18dp"
                                android:paddingEnd="@dimen/margin_20"
                                android:paddingStart="@dimen/margin_20"
                                android:paddingTop="@dimen/margin_10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_14" />

                        </LinearLayout>






                        <LinearLayout
                            android:id="@+id/categoryLl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <TextView
                                style="@style/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:padding="@dimen/margin_7"
                                android:text="@string/category" />


                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.6">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:src="@drawable/choicelist" />

                                <TextView
                                    android:id="@+id/categoryTV"
                                    style="@style/editTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/transparent"
                                    android:paddingBottom="@dimen/margin_21"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:paddingTop="@dimen/margin_10"
                                    android:text="Select Category" />
                            </FrameLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/subCategoryLl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <TextView
                                style="@style/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:padding="@dimen/margin_7"
                                android:text="@string/subCategory" />


                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.6">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:src="@drawable/choicelist" />

                                <TextView
                                    android:id="@+id/subCategoryTV"
                                    style="@style/editTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/transparent"
                                    android:paddingBottom="@dimen/margin_21"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:paddingTop="@dimen/margin_10"
                                    android:text="Select Sub Category" />
                            </FrameLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/priorityLl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <TextView
                                style="@style/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:padding="@dimen/margin_7"
                                android:text="@string/priority" />


                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.6">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:src="@drawable/choicelist" />

                                <TextView
                                    android:id="@+id/priorityTV"
                                    style="@style/editTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/transparent"
                                    android:paddingBottom="@dimen/margin_21"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:paddingStart="@dimen/margin_10"
                                    android:paddingTop="@dimen/margin_10"
                                    android:text="Select Priority" />
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/subjectLl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:padding="@dimen/margin_7"
                                android:text="@string/subject" />


                            <EditText
                                android:id="@+id/subjectET"
                                style="@style/editTextView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:paddingStart="@dimen/margin_10" />

                        </LinearLayout>
                        <include
                            android:id="@+id/descriptionLinearLayout"
                            layout="@layout/description_layout"
                            android:visibility="visible"></include>

                        <include
                            android:id="@+id/remarksLinearLayout1"
                            layout="@layout/remarks_edittext_layout"></include>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/remarksDataLl">
                    <include layout="@layout/remarks_layout"></include>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feedbackLL">
                    <include
                        layout="@layout/feedback_layout"></include>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/upload_document_layout"></include>
                </LinearLayout>


                <include
                    android:id="@+id/buttonLinearLayout"
                    layout="@layout/action_button_layout"></include>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>

