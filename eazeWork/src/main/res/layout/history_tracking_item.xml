<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/llFromDate"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvGrayTop"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_width="@dimen/margin_5"
            android:background="@color/colorMediumGray"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/margin_12"
            android:id="@+id/tvColor"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/history_time_in_element"/>
        <TextView
            android:id="@+id/tvTimeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvColor"
            android:textSize="@dimen/font_12"
            android:text="10:45 am"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_18" />

        <TextView
            android:id="@+id/mediator"
            android:layout_toEndOf="@id/tvTimeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:layout_marginTop="@dimen/margin_18"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:text="|"/>

        <TextView
            android:layout_toEndOf="@id/mediator"
            android:id="@+id/tvLocationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:layout_marginTop="@dimen/margin_18"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="Time In"/>

        <TextView
            android:layout_below="@id/tvColor"
            android:id="@+id/tvGrayBottom"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_width="@dimen/margin_5"
            android:background="@color/colorMediumGray"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>