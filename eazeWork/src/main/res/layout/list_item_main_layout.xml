<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_mini"
    android:paddingRight="@dimen/padding_mini"
    android:paddingBottom="@dimen/padding_default"
    android:paddingTop="@dimen/padding_default" >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/profile_image" />
    <hr.eazework.com.ui.util.custom.RoundedImageView
        android:id="@+id/img_icon_rounded"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_left_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_default" >

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_left_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding_default" >

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/accent"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_right_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_next_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/img_arrow_down_gray_fwd" />

</LinearLayout>