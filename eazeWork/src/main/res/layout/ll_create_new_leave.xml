<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:background="@color/fragment_bg">
    <include layout="@layout/progress_root_container"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_10"
           >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <LinearLayout
           android:layout_marginTop="10dp"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
          >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:text="@string/employee_name"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginLeft="@dimen/margin_default"
                    android:background="@drawable/grey_commoborder"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:id="@+id/empNameTV"
                    android:layout_width="match_parent"
                    android:padding="@dimen/margin_10"
                    android:textSize="@dimen/margin_14"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/margin_10"
                android:layout_gravity="center"
                android:id="@+id/searchLayout"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/search"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25" />
            </RelativeLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_10"
                android:layout_gravity="center"
                android:src="@drawable/choicelist"/>

            <TextView
                android:id="@+id/tv_select_leave_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:paddingStart="@dimen/margin_20"
                android:paddingEnd="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:text="Leave Type"
                android:textColor="@color/black"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_consume_leaves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text="Consumed Leave"
                android:textColor="@color/accent"/>

            <TextView
                android:id="@+id/ll_consume_leaves_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/avail_leave_count"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text="21.5"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_avail_leaves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text="Available Leave"
                android:textColor="@color/accent"/>

            <TextView
                android:id="@+id/ll_avail_leaves_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/avail_leave_count"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text="21.5"
                android:textColor="@color/white"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/rl_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_default"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/choicelist"/>

            <TextView
                android:id="@+id/tv_select_rest_leaves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:paddingLeft="@dimen/margin_default"
                android:text="Select Date"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"/>
        </FrameLayout>

        <TextView
            android:id="@+id/rl_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Restricted leaves are not available."
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_select_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <TextView
                    android:id="@+id/tv_from_date_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_default"
                    android:paddingTop="@dimen/padding_default"
                    android:text="@string/start_date"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:id="@+id/ll_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corne_background_blue_dark"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_mini"
                    android:paddingRight="@dimen/padding_default">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:src="@drawable/icon_callender"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/padding_default"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_from_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/start_date"
                            android:textSize="@dimen/margin_12"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_from_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--/--/----"
                            android:textSize="@dimen/margin_12"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <TextView
                    android:id="@+id/tv_to_date_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_default"
                    android:paddingTop="@dimen/padding_default"
                    android:text="@string/end_date"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:id="@+id/ll_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corne_background_blue_dark"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_mini"
                    android:paddingRight="@dimen/padding_default">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:src="@drawable/icon_callender"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/padding_default"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_to_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="@dimen/margin_12"
                            android:text="@string/end_date"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_to_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--/--/----"
                            android:textSize="@dimen/margin_12"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:text="@string/days"
            android:textColor="@color/black"/>

        <TextView
            android:layout_weight="0.7"
            android:id="@+id/daysTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_default"
            android:textColor="@color/black">

            <requestFocus/>
        </TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rg_leave_time_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_default"
            android:visibility="visible">

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:padding="@dimen/margin_3"
                    android:id="@+id/rb_25_day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:text="Qtr Day"
                    android:textSize="@dimen/font_11"
                    android:visibility="visible"/>

                <CheckBox
                    android:padding="@dimen/margin_3"
                    android:id="@+id/rb_half_day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:text="Half Day"
                    android:textSize="@dimen/font_11"
                    android:visibility="visible"/>

                <CheckBox
                    android:textSize="@dimen/font_11"
                    android:padding="@dimen/margin_3"
                    android:id="@+id/rb_75_day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:text="0.75 Day"
                    android:visibility="visible"/>

                <CheckBox
                    android:textSize="@dimen/font_11"
                    android:padding="@dimen/margin_3"
                    android:id="@+id/rb_full_day"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:checked="true"
                    android:text="Full Day"
                    android:visibility="visible"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/halfLl"
            >

            <TextView
                android:id="@+id/selectTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:text="Select"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_default">

                <CheckBox
                    android:id="@+id/firstHalfCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_default"
                    android:button="@drawable/checkbox_selector"
                    android:paddingLeft="@dimen/padding_mini"
                    android:textSize="@dimen/font_10"
                    android:text="First Half"
                    android:checked="true"
                    android:visibility="visible"/>

                <CheckBox
                    android:textSize="@dimen/font_10"
                    android:id="@+id/secondHalfCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_mini"
                    android:layout_marginTop="@dimen/padding_default"
                    android:button="@drawable/checkbox_selector"
                    android:paddingLeft="@dimen/padding_mini"
                    android:text="Second Half"
                    android:paddingRight="@dimen/padding_default"
                    android:visibility="visible"/>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/margin_10"
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:text="Remarks"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="@drawable/focus_style_gray"
            android:ems="10"
            android:textSize="@dimen/font_14"
            android:hint="@string/remarksLimit"
            android:maxLength="250"
            android:padding="@dimen/margin_default"
            android:textColor="@color/black">

            <requestFocus/>
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_default"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_save_as_draft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_accent"
                android:text="Save As Draft"
                android:textColor="@color/white"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_accent"
                android:text="Submit"
                android:textColor="@color/white"
                android:visibility="gone"/>
        </LinearLayout>



    </LinearLayout>
        <LinearLayout
            android:id="@+id/remarksDataLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_5"
           >

            <include layout="@layout/remarks_layout"></include>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="visible">
            <include layout="@layout/upload_document_layout"></include>
        </LinearLayout>

        <include
            android:id="@+id/buttonLinearLayout"
            layout="@layout/action_button_layout"></include>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/progress_root_container" />

</FrameLayout>