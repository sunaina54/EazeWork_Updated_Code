<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:background="@drawable/rounded_background_white"
        android:orientation="vertical"
        android:padding="@dimen/margin_default" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_default"
            android:text="Confirmation"
            android:textColor="@color/accent"
            android:textSize="@dimen/font_24" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_default"
            android:text="Are you sure you want to reject this request?"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default" >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:layout_marginBottom="@dimen/margin_mini"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_mini"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:paddingTop="@dimen/padding_mini"
                android:paddingBottom="@dimen/padding_mini"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/dlg_cancel"
                android:textColor="@color/white"
                android:clickable="true"
                android:background="@drawable/rounded_corner_accent"/>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:minWidth="@dimen/margin_70"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_mini"
                android:layout_marginTop="@dimen/margin_mini"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="@dimen/padding_mini"
                android:paddingBottom="@dimen/padding_mini"
                android:text="@string/dlg_ok"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:clickable="true"
                android:background="@drawable/rounded_corner_light_blue"/>
        </RelativeLayout>
</LinearLayout>