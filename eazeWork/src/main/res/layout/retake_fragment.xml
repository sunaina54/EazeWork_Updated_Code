<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/retakeFragment"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRetake"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <RelativeLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btRetake"
            android:background="@drawable/rounded_corner_accent"
            android:layout_gravity="right|end"
            android:layout_marginBottom="@dimen/margin_mini"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_mini"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingTop="@dimen/padding_mini"
            android:paddingBottom="@dimen/padding_mini"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:text=" Retake "
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/rounded_corner_light_blue"
            android:id="@+id/btConfirm"
            android:layout_gravity="right|end"
            android:layout_marginBottom="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_mini"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingTop="@dimen/padding_mini"
            android:paddingBottom="@dimen/padding_mini"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:text="Confirm"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>