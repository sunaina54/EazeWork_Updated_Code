<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_margin="@dimen/margin_7"
        android:id="@+id/lineItemId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_13">

        <LinearLayout
            android:id="@+id/categoryLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/categoryDescTV"
                android:layout_width="0dp"
                android:layout_weight="0.99"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Category"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:textStyle="bold" />

            <ImageView
                android:layout_weight="0.01"
                android:id="@+id/img_menu_icon"
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_15"
                android:layout_gravity="center_vertical"
                android:src="@drawable/squares_line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fromDateLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/fromDateLabel"
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="From Date"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fromDateTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/toDateLinearLayout">

            <TextView
                android:id="@+id/toDateLabel"
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="To Date"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/toDateTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/detailLableTV"
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Details"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/detailsTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/claimHeadLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/claimHeadLabelTV"
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Claim Head"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/claimHeadTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone"
            android:id="@+id/approvedAmountLl">

            <TextView
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/approved_amount"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/approvedAmountTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/statusLl"
            android:visibility="gone">

            <TextView
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/status"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/statusTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="No Policy"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/inputAmtLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/inputLabelTV"
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Input"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/inputTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/amountLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/amtLabelTV"
                style="@style/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Amount"
                android:textSize="@dimen/font_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:text=":"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/amountTV"
                style="@style/textViewYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="-"
                android:textSize="@dimen/font_12" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/actionBTN"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/rounded_corner_light_blue"
                android:text="Action"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                android:visibility="gone" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/statusMsgLl"
            android:layout_marginLeft="@dimen/margin_10">
            <Button
                android:id="@+id/statusBT"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/rounded_corner_light_blue"
                android:text="No Policy"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                android:padding="@dimen/margin_5"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical"
            android:id="@+id/viewDocLl"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_10">

            <Button
                android:id="@+id/viewDocBTN"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/rounded_corner_light_blue"
                android:text="Document"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                android:visibility="gone"
                android:padding="@dimen/margin_5"
                />

        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/lineDocumentLl">


        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/gradient_line"
            />
    </LinearLayout>

</RelativeLayout>
