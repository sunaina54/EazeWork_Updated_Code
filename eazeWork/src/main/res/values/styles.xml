<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <!-- Color for menu ... icon on action bar -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">



    </style>

    <style name="AppActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/caldroid_333</item>
        <item name="colorPrimaryDark">@color/caldroid_555</item>
        <item name="colorAccent">@color/caldroid_light_red</item>
    </style>



    <style name="PVRActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
        <item name="thickness">2dp</item>
        <item name="gapBetweenBars">3dp</item>
        <item name="drawableSize">36dp</item>
        <item name="titleTextStyle">@style/MyActionBarTitleTextStyle</item>
    </style>
    
    <style name="MyActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
      <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
      <style name="MyDialogThemeTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        
         <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    
      <style name="ThemeTransparent" parent="@style/Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/parcial_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="blueBorderEditText">
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/edittext_background_gray_corner</item>
    </style>

    <style name="tabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textView">
        <item name="android:padding">2dip</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewYellow">
        <item name="android:padding">2dip</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="textViewHoliday">
        <item name="android:padding">2dip</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="editTextView">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="button">
        <item name="android:textAllCaps" >false</item>
        <item name="android:gravity" >center</item>
    </style>
    <style name="edittext">
        <item name="android:padding">@dimen/margin_5</item>
    </style>


</resources>